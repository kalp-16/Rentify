<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <h3>Create a New Listing</h3>
        <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
                <div class="invalid-feedback">Please enter a valid Title</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter a valid Description</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Images</label>
                <input name="listing[image]" type="file" class="form-control" required>
                <div class="invalid-feedback">Please upload at least one image</div>
            </div>
            <div class="mb-3">
                <label for="propertyType" class="form-label">Property Type</label>
                <select name="listing[propertyType]" class="form-select" required>
                    <option selected disabled value="">Choose...</option>
                    <% const propertyTypes = ["Hotel","Resort","Bungalow", "Apartment","Cabin","Cottage","Glamping","Hostel","Ryokan","Farmhouse","Boat","Tent", "Villa", "Other"]; %>
                    <% for(let type of propertyTypes) { %>
                        <option value="<%= type %>"><%= type %></option>
                    <% } %>
                </select>
                <div class="invalid-feedback">Please select a valid Property Type</div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" placeholder="enter price" type="number" class="form-control" min="1" required>
                    <div class="invalid-feedback">Please enter a valid Price</div>
                </div>
                <div class="mb-3 col-md-4">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid Location</div>
                </div>
                <div class="mb-3 col-md-4">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid Country</div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Facilities</label>
                <div class="row">
                    <% const facilitiesList = ["Wifi", "Swimming Pool","Spa & Wellness","Restaurant", "AC", "Kitchen", "Free Parking", "Washing Machine","Laundry" ,"TV", "Pet Friendly", "Gym","Bar","Breakfast", "Family Friendly", "Business Center", "Airport Shuttle", "Fireplace", "Outdoor Space", "Smoke Alarm"]; %>
                     <% for(let facility of facilitiesList) { %>
                        <div class="col-md-3 mb-2">
                            <input type="checkbox" id="facility-<%= facility %>" name="listing[facilities]" value="<%= facility %>">
                            <label for="facility-<%= facility %>"><%= facility %></label>
                        </div>
                     <% } %>
                </div>
            </div>
            <button class="btn btn-dark add-btn mt-3">Add</button>
        </form>
    </div>
</div>