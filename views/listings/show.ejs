<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h2><%= listing.title %></h2>
    <div class="card">
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
      <p class="card-text">Owned by <i><%= listing.owner.username %></i></p>
      <div class="card-body">
        <br>
        <p><%= listing.description %></p>
        <b><p>&#8377; <%= listing.price.toLocaleString("en-IN") %></p></b>
        <p><%= listing.location %></p>
        <p><%= listing.country %></p>
      </div>
    </div>

    <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
      <div class="row mt-3">
        <div class="d-flex">
          <button class="btn btn-dark" style="background-color: red; border: none;">
            <a href="/listings/<%= listing._id %>/edit" style="text-decoration: none; color: white;">Edit this Listing</a>
          </button>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="ms-2">
            <button class="btn btn-dark" style="background-color: red; border: none;">Delete this listing</button>
          </form>
        </div>
      </div>
    <% } %>

    <% if (currUser) { %>
      <div class="mt-5">
        <hr>
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
          <label for="rating" class="form-label">Ratings: </label>
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>

          <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]" id="comment" cols="20" rows="5" class="form-control" required></textarea>
          </div>
          <button class="btn btn-outline-dark">Submit</button>
        </form>
      </div>
    <% } %>

    <hr class="mt-5">
    <p><b>All Reviews</b></p>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% for (let review of listing.reviews) { %>
        <div class="col">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= review.author?.username || "Anonymous" %></h5>
              <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
              <p class="card-text"><%= review.comment %></p>
            </div>
            <div class="card-footer bg-transparent border-top-0">
              <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-dark btn-sm">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>